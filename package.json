{
   "name": "Wombat",
   "version": "0.0.1",
   "main": "src/dist/electron/main.js",
   "scripts": {
      "dev": "concurrently -k -s first \"npm run vite\" \"npm run tsc:watch:electron\" \"npm run electron\"",
      "predev": "npm run tsc:electron",
      "build": "npm run compile && npm run electron:builder",
      "vite": "vite",
      "tsc:electron": "tsc -p tsconfig.electron.json",
      "tsc:watch:electron": "tsc -w -p tsconfig.electron.json",
      "compile": "vite build && tsc -p tsconfig.electron.json",
      "electron": "wait-on tcp:3000 && cross-env IS_DEV=true electron .",
      "electron:pack": "electron-builder --dir",
      "electron:builder": "electron-builder ",
      "test": "cross-env IS_TEST=true ts-mocha -p test.tsconfig.json test/tests.ts --verbose"
   },
   "dependencies": {},
   "devDependencies": {
      "@types/chai": "^4.3.0",
      "@types/mocha": "^9.1.0",
      "chai": "^4.3.6",
      "concurrently": "^7.0.0",
      "cross-env": "^7.0.3",
      "electron": "^17.0.1",
      "electron-builder": "^22.14.13",
      "electron-reloader": "^1.2.3",
      "mocha": "^9.2.2",
      "ts-mocha": "^9.0.2",
      "typescript": "^4.5.4",
      "vite": "^2.8.4",
      "wait-on": "^6.0.1"
   },
   "author": "Nils Ramst√∂ck",
   "description": "A cubing simulator",
   "license": "MIT",
   "bugs": {
      "url": "https://github.com/NilsRamstoeck/Wombat/issues"
   },
   "homepage": "https://github.com/NilsRamstoeck/Wombat#readme"
}
